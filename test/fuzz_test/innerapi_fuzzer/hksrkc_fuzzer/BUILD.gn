import("//base/security/huks/huks.gni")
import("//build/config/features.gni")
import("//build/test.gni")

##############################fuzztest##########################################
ohos_fuzztest("HksRkcFuzzTest") {
  module_out_path = fuzz_module_out_path
  fuzz_config_file =
      "//base/security/huks/test/fuzz_test/innerapi_fuzzer/hksrkc_fuzzer"

  include_dirs = [
    ".",
    "..",
    "//base/security/huks/frameworks/huks_standard/main/common/include/",
    "//base/security/huks/frameworks/huks_standard/main/crypto_engine/rkc/include",
    "//base/security/huks/frameworks/huks_standard/main/crypto_engine/rkc/src",
    "//base/security/huks/services/huks_standard/huks_service/main/core/include",
    "//base/security/huks/services/huks_standard/huks_service/main/hks_storage/include",
    "//base/security/huks/utils/file_operator",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [
    "//base/security/huks/frameworks/huks_standard/main/crypto_engine/rkc/src/hks_rkc.c",
    "//base/security/huks/frameworks/huks_standard/main/os_dependency/sysinfo/src/hks_get_udid.c",
    "hksrkc_fuzzer.cpp",
  ]

  deps = [
    "..:hks_fuzz_util",
    "//base/security/huks/frameworks/huks_standard/main:huks_standard_frameworks",
    "//base/security/huks/frameworks/huks_standard/main/os_dependency:libhuks_os_dependency_standard_static",
    "//base/security/huks/interfaces/inner_api/huks_standard/main:libhukssdk",
  ]
  external_deps = [ "c_utils:utils" ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":HksRkcFuzzTest",
  ]
}
